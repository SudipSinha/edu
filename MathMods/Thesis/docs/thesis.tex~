\section*{Notations}
\begin{itemize}
\item $ [n] = \{0, 1, 2, \dots, n\} $
\item $ \mathbb{N} = \{ 1, 2, 3, \dots \} $
\item $ \mathbb{N}_0 = \mathbb{N} \cup \{ 0 \} $
\item $ \mathbb{R}_{0+} = [0, \infty) $
\end{itemize}


