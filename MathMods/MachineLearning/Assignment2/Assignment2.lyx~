\begin_layout Itemize
False positive 
\begin_inset Formula $=\Pr\left(\hat{S}\mid L\right)=\frac{\Pr\left(\hat{S}\cap L\right)}{\Pr\left(L\right)}=\frac{0.02}{0.40}=0.05$
\end_inset


\end_layout

\begin_layout Itemize
False negative 
\begin_inset Formula $=\Pr\left(\hat{L}\mid S\right)=\frac{\Pr\left(\hat{L}\cap S\right)}{\Pr\left(S\right)}=\frac{0.09}{0.60}=0.15$
\end_inset


\end_layout

\begin_layout Itemize
Average error 
\begin_inset Formula $=\Pr\left(\hat{S}\cap L\right)+\Pr\left(\hat{L}\cap S\right)=0.02+0.09=0.11$
\end_inset


\end_layout

