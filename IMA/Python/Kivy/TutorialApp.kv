#:import random random

<ScatterTextWidget>:
	orientation: "vertical"

	TextInput:
		id: ti
		text: "default"
		font_size: 64
		size_hint_y: None
		height: 192
		on_text: lbl.color = [random.random() for i in range(3)] + [1]

	FloatLayout:
		Scatter:
			Label:
				id: lbl
				text: ti.text + "!!!"
				font_size: 64
